# Django
DEBUG=false
DJANGO_SECRET_KEY=replace-me
ALLOWED_HOSTS=gotogym.store,www.gotogym.store,api.gotogym.store

# CORS/CSRF
CORS_ALLOW_ALL_ORIGINS=false
CORS_ALLOWED_ORIGINS=https://gotogym.store,https://www.gotogym.store,https://app.gotogym.store
CSRF_TRUSTED_ORIGINS=https://gotogym.store,https://www.gotogym.store,https://app.gotogym.store

# Database (choose one)
DATABASE_URL=postgresql://user:pass@host:5432/dbname
# OR
POSTGRES_DB=gotogym
POSTGRES_USER=gotogym
POSTGRES_PASSWORD=replace-me
POSTGRES_HOST=replace-me
POSTGRES_PORT=5432
DB_CONN_MAX_AGE=60

# Security headers
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SECURE_PROXY_SSL_HEADER=true
SECURE_REFERRER_POLICY=same-origin
X_FRAME_OPTIONS=DENY
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# Email (ACS)
CONTACT_EMAIL_PROVIDER=acs
ACS_EMAIL_CONNECTION_STRING=endpoint=https://<resource>.communication.azure.com/;accesskey=...
CONTACT_EMAIL_FROM=DoNotReply@gotogym.store
CONTACT_EMAIL_TO=support@gotogym.store

# Push (FCM)
FCM_SERVER_KEY=replace-me

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=replace-me

# n8n (chat/coach)
N8N_WEBHOOK_URL=http://172.200.202.47/webhook/general-agent-gotogym-v2

# Azure OpenAI (Vision) - para describir fotos (ej. comida) y enviarlas al coach como texto.
# Configúralo en App Service (no pegues la key en el repo).
AZURE_OPENAI_ENDPOINT=https://<resource-name>.openai.azure.com
AZURE_OPENAI_API_KEY=replace-me
AZURE_OPENAI_VISION_DEPLOYMENT=replace-me
# Opcional (por defecto 2024-06-01)
AZURE_OPENAI_API_VERSION=2024-06-01

# Feature flag (por defecto true si hay config). Útil para apagar costos rápido.
CHAT_ATTACHMENT_VISION=true

# Internal scheduler (server-to-server). Set this in App Service and GitHub Actions secret.
INTERNAL_SYNC_TOKEN=replace-me

# Google Fit (optional)
GF_WEB_CLIENT_ID=replace-me
GF_WEB_CLIENT_SECRET=replace-me
GF_WEB_REDIRECT_URI=https://api.gotogym.store/oauth/google_fit/callback/

# Fitbit (optional)
FITBIT_CLIENT_ID=replace-me
FITBIT_CLIENT_SECRET=replace-me
FITBIT_REDIRECT_URI=https://api.gotogym.com/oauth/fitbit/callback/
FITBIT_SCOPE=activity sleep heartrate profile
FITBIT_FRONTEND_REDIRECT=https://www.gotogym.store/pages/settings/Dispositivos.html

# Garmin (optional)
GARMIN_CLIENT_ID=replace-me
GARMIN_CLIENT_SECRET=replace-me
GARMIN_REDIRECT_URI=https://api.gotogym.com/oauth/garmin/callback/
GARMIN_SCOPE=replace-me
GARMIN_AUTH_URL=replace-me
GARMIN_TOKEN_URL=replace-me
GARMIN_API_BASE=replace-me
GARMIN_STEPS_URL=replace-me
GARMIN_SLEEP_URL=replace-me
GARMIN_HEART_URL=replace-me
GARMIN_FRONTEND_REDIRECT=https://www.gotogym.store/pages/settings/Dispositivos.html

# SMTP (fallback when not using ACS)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=replace-me
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=replace-me
EMAIL_HOST_PASSWORD=replace-me
DEFAULT_FROM_EMAIL=DoNotReply@gotogym.store
CONTACT_EMAIL_SUBJECT_PREFIX=[GoToGym Contact]

# Terms
TERMS_VERSION=2025-04-07

# Frontend (optional override)
API_URL=https://api.gotogym.store/api/
GTG_API_URL=https://api.gotogym.store/api/

# Media storage (Azure Blob)
AZURE_STORAGE_ACCOUNT_NAME=replace-me
AZURE_STORAGE_ACCOUNT_KEY=replace-me
AZURE_STORAGE_CONTAINER=media
AZURE_STORAGE_CUSTOM_DOMAIN=media.gotogym.store
AZURE_CONTAINER_ATTACHMENTS=attachments
AZURE_CONTAINER_NUTRITION=nutricion
AZURE_CONTAINER_TRAINING=entrenamiento
AZURE_CONTAINER_MEDICAL=historiaclinica
AZURE_SAS_EXPIRATION=900
