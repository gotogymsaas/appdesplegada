# Django
DEBUG=false
DJANGO_SECRET_KEY=replace-me
ALLOWED_HOSTS=gotogym.com,www.gotogym.com,api.gotogym.com

# CORS/CSRF
CORS_ALLOW_ALL_ORIGINS=false
CORS_ALLOWED_ORIGINS=https://gotogym.com,https://www.gotogym.com,https://app.gotogym.com
CSRF_TRUSTED_ORIGINS=https://gotogym.com,https://www.gotogym.com,https://app.gotogym.com

# Database (choose one)
DATABASE_URL=postgresql://user:pass@host:5432/dbname
# OR
POSTGRES_DB=gotogym
POSTGRES_USER=gotogym
POSTGRES_PASSWORD=replace-me
POSTGRES_HOST=replace-me
POSTGRES_PORT=5432
DB_CONN_MAX_AGE=60

# Security headers
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SECURE_PROXY_SSL_HEADER=true
SECURE_REFERRER_POLICY=same-origin
X_FRAME_OPTIONS=DENY
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# Email (ACS)
CONTACT_EMAIL_PROVIDER=acs
ACS_EMAIL_CONNECTION_STRING=endpoint=https://<resource>.communication.azure.com/;accesskey=...
CONTACT_EMAIL_FROM=DoNotReply@gotogym.store
CONTACT_EMAIL_TO=support@gotogym.store

# Push (FCM)
FCM_SERVER_KEY=replace-me

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=replace-me

# Google Fit (optional)
GF_WEB_CLIENT_ID=replace-me
GF_WEB_CLIENT_SECRET=replace-me
GF_WEB_REDIRECT_URI=https://api.gotogym.com/oauth/google_fit/callback/

# Terms
TERMS_VERSION=2025-04-07

# Frontend (optional override)
API_URL=https://api.gotogym.com/api/
GTG_API_URL=https://api.gotogym.com/api/
